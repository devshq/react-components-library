{
  "name": "jl-react-components-library",
  "version": "0.0.23",
  "scripts": {
    "build": "rollup -c",
    "start": "start-storybook -p 4000 --quiet --ci",
    "test:dev": "jest --watch",
    "test": "jest",
    "prepublish-documentationx": "build-storybook",
    "publish-documentation": "storybook-to-ghpages",
    "start-documentation": "npx http-server storybook-static",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=0 src",
    "precommit": "lint-staged",
    "create-component": "node --experimental-modules scripts/create.mjs $*",
    "generate": "node --experimental-modules node_modules/.bin/plop --plopfile scripts/templates/index.js"
  },
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "@storybook/addon-a11y": "5.1.3",
    "@storybook/addon-actions": "5.1.3",
    "@storybook/addon-info": "4.1.11",
    "@storybook/addon-links": "5.1.3",
    "@storybook/addon-storysource": "5.1.3",
    "@storybook/addon-viewport": "5.1.3",
    "@storybook/addons": "5.1.3",
    "@storybook/react": "5.1.3",
    "@storybook/storybook-deployer": "2.8.1",
    "@testing-library/react": "8.0.1",
    "babel-eslint": "9.0.0",
    "babel-loader": "8.0.6",
    "css-loader": "2.1.1",
    "eslint": "5.16.0",
    "eslint-plugin-react-app": "4.0.1",
    "eslint-plugin-react-hooks": "1.6.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "jest-dom": "3.4.0",
    "lint-staged": "8.1.7",
    "node-sass": "4.12.0",
    "plop": "2.3.0",
    "prettier": "1.17.1",
    "prop-types": "15.7.2",
    "react-hooks-testing-library": "0.5.1",
    "react-test-renderer": "16.8.6",
    "rimraf": "2.6.3",
    "rollup": "1.1.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-terser": "5.0.0",
    "sass": "1.20.3",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1"
  },
  "peerDependencies": {
    "react": "16.*",
    "react-dom": "16.*"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/react/cleanup-after-each"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/src/style.mock.js"
    },
    "transform": {
      ".+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:react-app/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "no-console": 1,
      "react-app/react/default-props-match-prop-types": 1,
      "react-app/react/no-unused-prop-types": 1,
      "react-app/react/prop-types": 1,
      "react-app/react/sort-prop-types": 1,
      "react-hooks/rules-of-hooks": "error"
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json,css}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.js": [
        "npm run lint",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "description": "Boilerplate for creating React component libraries.",
  "keywords": [
    "react",
    "storybook",
    "rollup",
    "webpack"
  ],
  "author": "jmlivingston@gmail.com",
  "license": "ISC",
  "repository": "https://github.com/jmlivingston/react-components-library"
}
